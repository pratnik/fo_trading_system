services:
  - type: web
    name: app
    env: docker
    dockerfilePath: ./Dockerfile
    autoDeploy: true
    envVars:
      - key: SECRET_KEY
        value: "{{ env.SECRET_KEY }}"
      - key: ENCRYPTION_KEY
        value: "{{ env.ENCRYPTION_KEY }}"
      - key: DATABASE_URL
        fromDatabase:
          name: fo-trading-postgres
          property: connectionString
      - key: REDIS_URL
        fromService:
          type: redis
          name: fo-trading-redis
          property: connectionString
      - key: PORT
        value: "8501"

  - type: worker
    name: celery-worker
    env: docker
    dockerfilePath: ./Dockerfile
    autoDeploy: true
    envVars:
      - key: SECRET_KEY
        value: "{{ env.SECRET_KEY }}"
      - key: ENCRYPTION_KEY
        value: "{{ env.ENCRYPTION_KEY }}"
      - key: DATABASE_URL
        fromDatabase:
          name: fo-trading-postgres
          property: connectionString
      - key: REDIS_URL
        fromService:
          type: redis
          name: fo-trading-redis
          property: connectionString

  - type: worker
    name: celery-beat
    env: docker
    dockerfilePath: ./Dockerfile
    autoDeploy: true
    envVars:
      - key: SECRET_KEY
        value: "{{ env.SECRET_KEY }}"
      - key: ENCRYPTION_KEY
        value: "{{ env.ENCRYPTION_KEY }}"
      - key: DATABASE_URL
        fromDatabase:
          name: fo-trading-postgres
          property: connectionString
      - key: REDIS_URL
        fromService:
          type: redis
          name: fo-trading-redis
          property: connectionString

  - type: redis
    name: fo-trading-redis
    plan: free
    ipAllowList: []

databases:
  - name: fo-trading-postgres
    plan: standard
